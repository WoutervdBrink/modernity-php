{
  "name": "knevelina/modernity-php",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Wouter van den Brink",
      "email": "git@woutervdb.com"
    }
  ],
  "support": {
    "issues": "https://github.com/woutervdbrink/modernity-php/issues",
    "source": "https://github.com/woutervdbrink/modernity-php"
  },
  "require": {
    "php": "^8.4",
    "ext-dom": "*",
    "ext-ds": "*",
    "illuminate/view": "^12.17",
    "laravel-zero/framework": "^12.0",
    "nikic/php-parser": "^5.6"
  },
  "require-dev": {
    "haydenpierce/class-finder": "^0.5.3",
    "laravel/pint": "^1.25",
    "pestphp/pest": "^4.1",
    "phpstan/phpstan": "^2.1",
    "vimeo/psalm": "^6.13"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    },
    "exclude-from-classmap": [
      "/tests/Fixtures/**"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "bin": [
    "application"
  ]
}
